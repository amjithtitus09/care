  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Django",
      "type": "debugpy",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "connect": {
        "port": 9876,
        "host": "127.0.0.1",
      },
    },
    {
      "name": "Python: Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver_plus",
        "9000",
        "--print-sql"
      ],
      "envFile": "${workspaceFolder}/.env",
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: Django Make Migrations",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "makemigrations"
      ],
      "envFile": "${workspaceFolder}/.env",
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: Django Migrate",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "migrate"
      ],
      "envFile": "${workspaceFolder}/.env",
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
